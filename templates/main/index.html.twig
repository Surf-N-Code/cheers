{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="container">
        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('success') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        <img src="{{ asset('leonardo.jpg') }}" alt="Cheers Brosnan" class="center">
        <p></p>
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm">
                <div>Care for a drink?</div>
                <p></p>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Lets get drunk" class="btn btn-success" />
                {{ form_end(form) }}
            </div>
            <div class="col-sm">
            </div>
        </div>

    </div>

{% endblock %}
